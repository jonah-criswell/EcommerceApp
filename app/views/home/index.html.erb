<!-- Hero Section -->
<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; border-radius: 15px; margin: 20px 0;">
  <div class="container">
    <h1 class="display-3 mb-4 fw-bold">Welcome to Furnishly</h1>
    <p class="lead mb-4 fs-5">Discover beautiful furniture that transforms your space. Quality craftsmanship meets modern design.</p>
    <%= link_to("Browse Our Full Catalog", products_path, class: "btn btn-light btn-lg px-4 py-2 fw-semibold") %>
  </div>
</div>

<!-- Featured Products Section -->
<div class="container">
  <div class="text-center mb-5">
    <h2 class="display-5 mb-3">Featured Products</h2>
    <p class="text-muted fs-5">Handpicked items you'll love</p>
  </div>

  <div class="row g-4 justify-content-center">
    <% @featured_products.each do |product| %>
      <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0" style="transition: transform 0.2s ease-in-out;">
          <div class="card-img-top position-relative" style="height: 250px; overflow: hidden;">
            <% if product.featured_image.attached? %>
              <%= image_tag product.featured_image.variant(resize_to_fill: [400, 250]).processed,
                            class: "w-100 h-100", style: "object-fit: cover;", loading: "lazy" %>
            <% else %>
              <div class="w-100 h-100 d-flex justify-content-center align-items-center"
                   style="background: linear-gradient(45deg, #f8f9fa 25%, transparent 25%), linear-gradient(-45deg, #f8f9fa 25%, transparent 25%), linear-gradient(45deg, transparent 75%, #f8f9fa 75%), linear-gradient(-45deg, transparent 75%, #f8f9fa 75%); background-size: 20px 20px; background-position: 0 0, 0 10px, 10px -10px, -10px 0px;">
                <span class="text-muted">No image available</span>
              </div>
            <% end %>
            <div class="position-absolute top-0 end-0 m-2">
              <span class="badge bg-success fs-6 px-3 py-2">$<%= number_to_currency(product.price, unit: "") %></span>
            </div>
          </div>
          
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold mb-3"><%= product.name %></h5>
            <div class="mt-auto">
              <%= link_to "View Details", product_path(product), 
                          class: "btn btn-outline-success w-100 fw-semibold",
                          style: "border-radius: 25px;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Call to Action -->
  <div class="text-center mt-5 pt-4">
    <div class="p-4" style="background-color: #f8f9fa; border-radius: 15px;">
      <h3 class="mb-3">Ready to find your perfect piece?</h3>
      <p class="text-muted mb-4">Explore our complete collection of handcrafted furniture</p>
      <%= link_to("View All Products", products_path, class: "btn btn-success btn-lg px-4 py-2 fw-semibold") %>
    </div>
  </div>
</div>

<style>
.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
}

.hero-section {
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.btn {
  border-radius: 8px;
  transition: all 0.2s ease-in-out;
}

.btn:hover {
  transform: translateY(-1px);
}
</style>
